<form class="insideContainer" method="POST">
    <h1>Please log in</h1>

    {{>error status=smthWrong}} 

    <div class="nameContainer">
     
        <div>
            <label for="emailId">Email address:</label>
            <input type="email" id="emailId" name="email" placeholder="your@email.com" pattern="[^@\s]+@[^@\s]+\.[^@\s]+" required/></div>

        <div>
            <label for="passwordId">Password:</label>
            <input type="password"type="text" id="passwordId" name="password" required/></div>

    </div>

    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
    <button>LOG IN</button>
</form>