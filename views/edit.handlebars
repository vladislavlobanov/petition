<div class="bgPhoto prChange"> </div>
<div class="bgOverlay prChange"> </div>
<div class="frameHolder">

    <div class="insideframeHolder">
        <div class="frame">

            <form class="frameContainer" method="POST">

                <h1 class="regEl">EDIT YOUR PROFILE</h1>
                <div class="bannerRegister">#FREENAVALNY</div>

                <div class="regEl">
                    <div class="frameContainer center">
                    {{>error status=smthWrong}} 
                        <div>
                            <div class="orgInputs">
                                <label for="firstNameId">First name:</label>
                                <input
                                    type="text"
                                    id="firstNameId"
                                    name="firstName"
                                    value="{{firstname}}"
                                    required
                                /></div>
                            <div class="orgInputs" style="padding-bottom: 0px;">
                                <label for="lastNameId">Last name:</label>
                                <input
                                    type="text"
                                    id="lastNameId"
                                    name="lastName"
                                    value="{{lastname}}"
                                    required
                                />
                            </div>
                        </div>
                        <div>
                            <div class="orgInputs">
                                <label for="emailId">Email:</label>
                                <input
                                    type="text"
                                    id="emailId"
                                    name="email"
                                    placeholder="your@email.com"
                                    value="{{email}}"
                                    pattern="[^@\s]+@[^@\s]+\.[^@\s]+"
                                    required
                                /></div>

                            <div class="orgInputs" style="padding-bottom: 0px;">
                                <label for="passwordId">Password:</label>
                                <input
                                    type="password"
                                    id="passwordId"
                                    name="password"
                                /></div>
                        </div>
                        <div>
                            <div class="orgInputs">
                                <label for="ageId">Age:</label>
                                <input
                                    type="number"
                                    id="ageId"
                                    name="age"
                                    min="18"
                                    max="100"
                                    value="{{age}}"
                                /></div>

                            <div class="orgInputs">
                                <label for="cityId">City:</label>
                                <input
                                    type="text"
                                    id="cityId"
                                    name="city"
                                    value="{{city}}"
                                /></div>
                            <div class="orgInputs" style="padding-bottom: 0px;">
                                <label for="homepageId">Homepage:</label>

                                <input
                                    type="text"
                                    pattern="https?://.+"
                                    id="homapageId"
                                    name="homepage"
                                    placeholder="http://example.com"
                                    value="{{homepage}}"
                                />

                            </div>
                        </div>
                        <input
                            type="hidden"
                            name="_csrf"
                            value="{{csrfToken}}"
                        />
                        <div class="wrapper"><button>SUBMIT</button></div>
                        <div><a style="font-weight: bold;" href="/logout">LOG
                                OUT</a></div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>